<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- namespace="매퍼 인터페이스 경로" --> 
<mapper namespace="com.aloha.todo.mapper.TodoMapper">

    <select id="list" resultType="Todo">
        SELECT *
        FROM todo
        ORDER BY status ASC, no DESC
    </select>

    <select id="select" resultType="Todo">
        SELECT *
        FROM todo
        WHERE no = #{no}
    </select>

<!-- 등록 -->
<!-- 
    useGeneratedKeys
    : AUTO_INCREMENT 된 값을 keyProperty 에 지정한 변수에 자동으로 담아준다.
 -->
    <!-- <insert id="insert">
        <selectKey keyProperty="no" resultType="Todo" order="AFTER">
            SELECT no, name, status, reg_date, upd_date
            FROM todo WHERE no = LAST_INSERT_ID()
        </selectKey> -->
        <!-- 1 -->
        <!-- <insert id="insert" useGeneratedKeys="true" keyProperty="no"> -->
        <!-- 2 -->
        <insert id="insert">
            <selectKey keyProperty="no" resultType="int" order="AFTER">
                SELECT LAST_INSERT_ID() no FROM dual
            </selectKey>
            INSERT INTO todo( name, status)
            VALUES ( #{name}, #{status} )
        </insert>

    <update id="update">
        UPDATE todo
           SET name = #{name}
              ,status = #{status}
              ,upd_date = now()
        WHERE no = #{no}
    </update>

    <delete id="delete">
        DELETE FROM todo
        WHERE no = #{no}
    </delete>

    <!-- 전체 완료 -->
    <update id="onCompleteAll">
        UPDATE todo
            SET status = 1
                ,upd_date = now()
    </update>
    <!-- 전체 삭제 -->
    <delete id="onRemoveAll">
        DELETE FROM todo
    </delete>


</mapper>